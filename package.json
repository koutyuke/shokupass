{
  "name": "shokupass",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "lint": "turbo lint",
    "fmt": "turbo fmt",
    "test": "turbo test",
    "all": "pnpm --filter @shokupass/*",
    "mobile": "pnpm --filter @shokupass/mobile",
    "web": "pnpm --filter @shokupass/web",
    "api": "pnpm --filter @shokupass/api",
    "ui": "pnpm --filter @shokupass/ui"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "turbo": "latest",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ]
}
